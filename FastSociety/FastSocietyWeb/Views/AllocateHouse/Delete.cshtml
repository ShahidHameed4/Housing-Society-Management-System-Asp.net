@model AllocateHouse

<form method="post">
	<input asp-for="House_Number" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete House Record</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="House_Number"></label>
			<input asp-for="House_Number" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="Mobile"></label>
			<input asp-for="Mobile" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="Email"></label>
			<input asp-for="Email" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="BirthDate"></label>
			<input asp-for="BirthDate" disabled class="form-control" />
			
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="AllocateHouse" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}