@model Complaint

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Complaint</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		
		<div class="mb-3">
			<label asp-for="User_ID"></label>
			<input asp-for="User_ID" class="form-control" />
			<span asp-validation-for="User_ID" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Complaint_Type"></label>
			<input asp-for="Complaint_Type" class="form-control" />
			<span asp-validation-for="Complaint_Type" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Status"></label>
			<input asp-for="Status" class="form-control" />
			<span asp-validation-for="Status" class="text-danger"></span>
		</div>
		
		
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Complaint" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}