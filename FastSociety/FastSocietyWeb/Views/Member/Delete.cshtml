@model Member

<form method="post">
	<input asp-for="Member_ID" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Member</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Member_Name"></label>
			<input asp-for="Member_Name" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="Member_Address"></label>
			<input asp-for="Member_Address" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="Member_Phone"></label>
			<input asp-for="Member_Phone" disabled class="form-control" />
			
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Member" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}