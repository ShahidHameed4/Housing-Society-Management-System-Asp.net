@model Member

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Member</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Member_Name"></label>
			<input asp-for="Member_Name" class="form-control" />
			<span asp-validation-for="Member_Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Member_Address"></label>
			<input asp-for="Member_Address" class="form-control" />
			<span asp-validation-for="Member_Address" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Member_Phone"></label>
			<input asp-for="Member_Phone" class="form-control" />
			<span asp-validation-for="Member_Phone" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Member" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}